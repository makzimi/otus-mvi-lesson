<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    >

  <Button
      android:id="@+id/buttonMVVM"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="MVVM"
      app:layout_constraintBottom_toTopOf="@+id/buttonRoxie"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <Button
      android:id="@+id/buttonRoxie"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="MVI Roxie"
      app:layout_constraintBottom_toTopOf="@+id/buttonMVICore"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/buttonMVVM"
      />

  <Button
      android:id="@+id/buttonMVICore"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="MVI MVICore"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/buttonRoxie"
      />

</androidx.constraintlayout.widget.ConstraintLayout>